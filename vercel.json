{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",

  "redirects": [
    {
      "source": "/(.*)",
      "has": [
        {
          "type": "host",
          "value": "authorai.tech"
        }
      ],
      "destination": "https://authorai.site/$1",
      "permanent": true
    }
  ],

  "routes": [
    {
      "src": "/assets/.*",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      },
      "continue": true
    },
    { "handle": "filesystem" },
    { "src": "/.*", "dest": "/index.html" }
  ]
}
